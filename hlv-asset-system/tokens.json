{
  "meta": {
    "name": "HLV Design System",
    "version": "1.0.0",
    "description": "Design tokens for Hudson Lab Ventures educational materials"
  },
  "core": {
    "baseUnit": 8,
    "typeBase": 16,
    "typeRatio": 1.25
  },
  "canvas": {
    "standard": {
      "width": 1920,
      "height": 1080,
      "aspect": "16:9"
    },
    "square": {
      "width": 1080,
      "height": 1080,
      "aspect": "1:1"
    }
  },
  "grid": {
    "standard": {
      "columns": 12,
      "rows": 6,
      "margin": 80,
      "gutter": 24
    },
    "square": {
      "columns": 6,
      "rows": 6,
      "margin": 64,
      "gutter": 24
    }
  },
  "colors": {
    "primary": {
      "navy": "#182D53",
      "navyLight": "#2E4A7D",
      "navyPale": "#E8EDF5"
    },
    "accent": {
      "green": "#22C55E",
      "greenLight": "#4ADE80",
      "greenPale": "#F0FDF4"
    },
    "accentTint": "#F0FDF4",
    "tertiary": {
      "amber": "#F59E0B",
      "amberLight": "#FBBF24",
      "amberPale": "#FFFBEB",
      "gold": "#EAB308"
    },
    "neutral": {
      "white": "#FFFFFF",
      "pale": "#F3F4F6",
      "light": "#D1D5DB",
      "gray": "#6B7280",
      "dark": "#374151"
    },
    "text": {
      "primary": "#1F2937",
      "emphasis": "#111827",
      "secondary": "#4B5563",
      "muted": "#6B7280",
      "subtle": "#9CA3AF",
      "inverse": "#FFFFFF"
    },
    "surface": {
      "base": "#FFFFFF",
      "subtle": "#F9FAFB",
      "muted": "#F3F4F6"
    },
    "border": {
      "default": "#D1D5DB",
      "subtle": "#E5E7EB",
      "emphasis": "#9CA3AF"
    },
    "semantic": {
      "success": "#059669",
      "successPale": "#ECFDF5",
      "warning": "#D97706",
      "warningPale": "#FFFBEB",
      "error": "#DC2626",
      "errorPale": "#FEF2F2"
    },
    "gradients": {
      "greenDiamond": {
        "type": "linear",
        "angle": 180,
        "stops": [
          {
            "offset": 0,
            "color": "#DCFCE7"
          },
          {
            "offset": 100,
            "color": "#BBF7D0"
          }
        ]
      }
    }
  },
  "spacing": {
    "3xs": 2,
    "2xs": 4,
    "xs": 8,
    "sm": 12,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "2xl": 48,
    "3xl": 64,
    "4xl": 80
  },
  "typography": {
    "family": "Manrope",
    "fallback": "system-ui, sans-serif",
    "fontFamily": "'Manrope', system-ui, -apple-system, sans-serif",
    "fontFamilyMono": "'JetBrains Mono', 'Fira Code', monospace",
    "sizes": {
      "micro": 14,
      "caption": 12,
      "small": 14,
      "base": 16,
      "lg": 20,
      "h3": 24,
      "h2": 32,
      "h1": 40,
      "display": 48,
      "displayLg": 64
    },
    "lineHeights": {
      "micro": 20,
      "caption": 16,
      "small": 20,
      "base": 24,
      "lg": 28,
      "h3": 32,
      "h2": 40,
      "h1": 48,
      "display": 56,
      "displayLg": 72
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    "scale": {
      "display": {
        "size": 48,
        "weight": 800,
        "lineHeight": 1.1
      },
      "h1": {
        "size": 32,
        "weight": 700,
        "lineHeight": 1.2
      },
      "h2": {
        "size": 24,
        "weight": 700,
        "lineHeight": 1.3
      },
      "h3": {
        "size": 20,
        "weight": 600,
        "lineHeight": 1.4
      },
      "body": {
        "size": 16,
        "weight": 400,
        "lineHeight": 1.5
      },
      "bodyBold": {
        "size": 16,
        "weight": 600,
        "lineHeight": 1.5
      },
      "small": {
        "size": 14,
        "weight": 400,
        "lineHeight": 1.5
      },
      "caption": {
        "size": 12,
        "weight": 500,
        "lineHeight": 1.4
      },
      "micro": {
        "size": 10,
        "weight": 500,
        "lineHeight": 1.3
      }
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "snug": "-0.01em",
      "normal": "0",
      "wide": "0.01em",
      "wider": "0.02em"
    }
  },
  "borders": {
    "radius": {
      "sm": 4,
      "md": 8,
      "lg": 12,
      "full": 9999
    },
    "width": {
      "thin": 1,
      "medium": 2,
      "thick": 3
    }
  },
  "shapes": {
    "radius": {
      "none": 0,
      "sm": 4,
      "md": 8,
      "lg": 12,
      "xl": 16,
      "full": 9999
    },
    "stroke": {
      "hairline": 0.5,
      "thin": 1,
      "medium": 2,
      "thick": 3,
      "heavy": 4
    },
    "shadow": {
      "none": "none",
      "sm": "0 1px 2px rgba(0,0,0,0.05)",
      "md": "0 4px 6px rgba(0,0,0,0.07)",
      "lg": "0 10px 15px rgba(0,0,0,0.1)"
    }
  },
  "textStyles": {
    "displayHeadline": {
      "size": "displayLg",
      "lineHeight": "displayLg",
      "weight": "bold",
      "color": "primary.navy",
      "letterSpacing": "tight"
    },
    "displayTitle": {
      "size": "display",
      "lineHeight": "display",
      "weight": "semibold",
      "color": "primary.navy",
      "letterSpacing": "tight"
    },
    "h1": {
      "size": "h1",
      "lineHeight": "h1",
      "weight": "bold",
      "color": "primary.navy",
      "letterSpacing": "snug"
    },
    "h2": {
      "size": "h2",
      "lineHeight": "h2",
      "weight": "semibold",
      "color": "primary.navy",
      "letterSpacing": "snug"
    },
    "h3": {
      "size": "h3",
      "lineHeight": "h3",
      "weight": "semibold",
      "color": "text.secondary",
      "letterSpacing": "normal"
    },
    "h4": {
      "size": "lg",
      "lineHeight": "lg",
      "weight": "semibold",
      "color": "text.secondary",
      "letterSpacing": "normal"
    },
    "body": {
      "size": "base",
      "lineHeight": "base",
      "weight": "regular",
      "color": "text.primary",
      "letterSpacing": "normal"
    },
    "bodyEmphasis": {
      "size": "base",
      "lineHeight": "base",
      "weight": "semibold",
      "color": "text.emphasis",
      "letterSpacing": "normal"
    },
    "bodyMuted": {
      "size": "base",
      "lineHeight": "base",
      "weight": "regular",
      "color": "text.secondary",
      "letterSpacing": "normal"
    },
    "small": {
      "size": "small",
      "lineHeight": "small",
      "weight": "regular",
      "color": "text.primary",
      "letterSpacing": "normal"
    },
    "smallMuted": {
      "size": "small",
      "lineHeight": "small",
      "weight": "regular",
      "color": "text.muted",
      "letterSpacing": "normal"
    },
    "label": {
      "size": "small",
      "lineHeight": "small",
      "weight": "medium",
      "color": "text.secondary",
      "letterSpacing": "normal"
    },
    "labelBold": {
      "size": "small",
      "lineHeight": "small",
      "weight": "semibold",
      "color": "text.primary",
      "letterSpacing": "normal"
    },
    "caption": {
      "size": "caption",
      "lineHeight": "caption",
      "weight": "medium",
      "color": "text.muted",
      "letterSpacing": "normal"
    },
    "captionEmphasis": {
      "size": "caption",
      "lineHeight": "caption",
      "weight": "semibold",
      "color": "text.secondary",
      "letterSpacing": "normal"
    },
    "tag": {
      "size": "micro",
      "lineHeight": "micro",
      "weight": "semibold",
      "color": "text.inverse",
      "letterSpacing": "wider",
      "textTransform": "uppercase"
    },
    "tagMuted": {
      "size": "micro",
      "lineHeight": "micro",
      "weight": "medium",
      "color": "text.secondary",
      "letterSpacing": "wide"
    },
    "micro": {
      "size": "micro",
      "lineHeight": "micro",
      "weight": "medium",
      "color": "text.muted",
      "letterSpacing": "wide"
    }
  },
  "components": {
    "nodes": {
      "box": {
        "fill": "surface.muted",
        "stroke": "border.default",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md"
      },
      "boxNavy": {
        "fill": "primary.navy",
        "stroke": "none",
        "strokeWidth": "none",
        "radius": "md",
        "padding": "md",
        "textStyle": "tag"
      },
      "boxAccent": {
        "fill": "accent.greenPale",
        "stroke": "accent.green",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md"
      },
      "boxWarm": {
        "fill": "tertiary.amberPale",
        "stroke": "tertiary.amber",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md"
      },
      "circle": {
        "fill": "primary.navy",
        "stroke": "none",
        "textStyle": "tag"
      },
      "circleAccent": {
        "fill": "accent.green",
        "stroke": "none",
        "textStyle": "tag"
      },
      "phase": {
        "fill": "primary.navy",
        "stroke": "none",
        "radius": "full",
        "padding": "sm",
        "textStyle": "tag"
      },
      "phaseAccent": {
        "fill": "accent.green",
        "stroke": "none",
        "radius": "full",
        "padding": "sm",
        "textStyle": "tag"
      },
      "diamond": {
        "fill": "primary.navy",
        "stroke": "none",
        "textStyle": "tag"
      }
    },
    "edges": {
      "arrow": {
        "stroke": "primary.navy",
        "strokeWidth": "medium",
        "headSize": 12,
        "headLength": 10,
        "style": "solid"
      },
      "arrowAccent": {
        "stroke": "accent.green",
        "strokeWidth": "medium",
        "headSize": 12,
        "headLength": 10,
        "style": "solid"
      },
      "arrowMuted": {
        "stroke": "text.muted",
        "strokeWidth": "thin",
        "headSize": 10,
        "headLength": 8,
        "style": "solid"
      },
      "line": {
        "stroke": "primary.navy",
        "strokeWidth": "medium",
        "style": "solid"
      },
      "dashed": {
        "stroke": "text.muted",
        "strokeWidth": "thin",
        "style": "dashed",
        "dashArray": "6,4"
      },
      "curved": {
        "stroke": "primary.navy",
        "strokeWidth": "medium",
        "headSize": 12,
        "headLength": 10,
        "style": "solid"
      }
    },
    "cards": {
      "basic": {
        "fill": "surface.base",
        "stroke": "border.default",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md",
        "shadow": "none"
      },
      "subtle": {
        "fill": "surface.muted",
        "stroke": "none",
        "radius": "md",
        "padding": "md",
        "shadow": "none"
      },
      "elevated": {
        "fill": "surface.base",
        "stroke": "border.subtle",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md",
        "shadow": "md"
      },
      "header": {
        "fill": "surface.base",
        "stroke": "border.default",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md",
        "headerHeight": 40,
        "headerFill": "primary.navy",
        "headerTextStyle": "tag"
      },
      "headerAccent": {
        "fill": "surface.base",
        "stroke": "accent.green",
        "strokeWidth": "medium",
        "radius": "md",
        "padding": "md",
        "headerHeight": 40,
        "headerFill": "accent.green",
        "headerTextStyle": "tag"
      },
      "highlight": {
        "fill": "accent.greenPale",
        "stroke": "accent.green",
        "strokeWidth": "medium",
        "radius": "md",
        "padding": "md",
        "shadow": "none"
      },
      "warm": {
        "fill": "tertiary.amberPale",
        "stroke": "tertiary.amber",
        "strokeWidth": "thin",
        "radius": "md",
        "padding": "md",
        "shadow": "none"
      }
    },
    "annotations": {
      "title": {
        "textStyle": "displayTitle",
        "align": "center",
        "position": "top"
      },
      "subtitle": {
        "textStyle": "bodyMuted",
        "align": "center",
        "position": "belowTitle",
        "offsetY": 28
      },
      "caption": {
        "textStyle": "caption",
        "align": "center",
        "position": "bottom"
      },
      "legend": {
        "textStyle": "micro",
        "position": "bottomLeft"
      },
      "number": {
        "size": 48,
        "weight": "bold",
        "color": "primary.navy",
        "opacity": 0.15
      }
    },
    "dividers": {
      "horizontal": {
        "stroke": "border.default",
        "strokeWidth": "thin"
      },
      "vertical": {
        "stroke": "border.default",
        "strokeWidth": "thin"
      },
      "dashed": {
        "stroke": "border.default",
        "strokeWidth": "thin",
        "dashArray": "6,4"
      }
    }
  }
}
